<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>

      <%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>

      <p>Name</p>
      <p><%= f.text_field :name, class: "form-control", autofocus: true, id:"inputName", placeholder:"名前"%></p>

      <p>Image</p>
      <p><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></p>

      <p>Introduction</p>
      <p><%= f.text_area :introduction, class: "form-control", autofocus: true, id:"inputintroduction", placeholder:"Introduction"%></p>

      <p><%= f.submit "Update User", class: "btn btn-secondary" %></p>

      <% end %>
    </div>
  </div>
</div>