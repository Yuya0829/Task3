<h1>User info</h1>
<div>
  <%= image_tag @book.user.get_profile_image(100,100) %>
  <h3><%= @book.user.name %></h3>
  <h3><%= @book.user.introduction %></h3>
   <% if @book.user == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@book.user) %></p>
  <% end %>
</div>

<h1>New book</h1>
  <%= form_with model: @book_new do |f| %>

    <h4>Title</h4>
      <%= f.text_field :title %>

    <h4>Opinion</h4>
      <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

  <% end %>

<h1>Book detail</h1>
<div>
  <p><%= image_tag @book.user.get_profile_image(100,100) %></p>
  <p>Title：<%= @book.title %></p>
  <p>Opinion：<%= @book.body %></p>
  <p><%= @book.user.name %></p>
  <% if @book.user == current_user %>
    <%= link_to "Destroy", book_path(@book.id), method: :delete %>
    <%= link_to "Edit", edit_book_path(@book.id), method: :get %>
  <% end %>
</div>